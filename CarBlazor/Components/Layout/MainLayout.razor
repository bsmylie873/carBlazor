@inherits LayoutComponentBase
@using Microsoft.AspNetCore.Components.Authorization

<div class="page">
    <div class="sidebar">
        <NavMenu/>
    </div>

    <main>
        <div class="top-row px-4">
            <div class="dealership-banner">
                <h1 class="dealership-title">Car Dealership Management</h1>
            </div>
            <div class="ms-auto d-flex align-items-center">
                <AuthorizeView>
                    <Authorized>
                        <div class="d-flex gap-2">
                            <a href="/account/profile" class="btn btn-outline-primary btn-sm">
                                <i class="bi bi-person"></i> @context.User.Identity?.Name
                            </a>
                            <form method="post" action="/api/account/logout" class="d-inline">
                                <button type="submit" class="btn btn-outline-danger btn-sm">
                                    <i class="bi bi-box-arrow-right"></i> Logout
                                </button>
                            </form>
                        </div>
                    </Authorized>
                    <NotAuthorized>
                        <a href="/login" class="btn btn-primary btn-sm">
                            <span class="me-1"></span> Login
                        </a>
                    </NotAuthorized>
                </AuthorizeView>
            </div>
        </div>

        <article class="content px-4">
            @Body
        </article>

        <footer class="border-top footer text-muted">
            <div class="container text-center py-3">
                &copy; Car Dealership Management System
            </div>
        </footer>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

<style>
    .dealership-banner {
        background-color: var(--bs-primary);
        color: white;
        padding: 0.5rem 1rem;
        margin-bottom: 1rem;
    }

    .dealership-title {
        font-size: 1.5rem;
        margin: 0;
    }

    .footer {
        margin-top: 2rem;
    }
</style>